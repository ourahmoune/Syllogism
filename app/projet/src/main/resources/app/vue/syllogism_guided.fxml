<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.shape.Circle?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      stylesheets="@syllogism_guided.css"
      fx:controller="app.controller.GuidedController"
      styleClass="subPane">
   <children>
      <HBox alignment="CENTER" style="-fx-spacing: 10;">
         <children>
            <ComboBox fx:id="choix_figure" prefWidth="150.0" promptText="Figure:" HBox.hgrow="ALWAYS"/>
            <ImageView fx:id="image_figure" fitHeight="40.0" fitWidth="56.0" pickOnBounds="true" preserveRatio="true" />
         </children>
      </HBox>
      <HBox alignment="CENTER" style="-fx-spacing: 10;" VBox.vgrow="ALWAYS">
         <children>
            <ComboBox onAction="#fillorder" fx:id="Q1" prefWidth="150.0" promptText="Ex: All" HBox.hgrow="ALWAYS"/>
            <TextField onKeyTyped="#fillorder" fx:id="P1_1" promptText="birds" HBox.hgrow="ALWAYS">
               <HBox.margin>
                  <Insets bottom="20.0" />
               </HBox.margin>
            </TextField>
            <TextField promptText="have" HBox.hgrow="ALWAYS">
               <HBox.margin>
                  <Insets bottom="20.0" />
               </HBox.margin>
            </TextField>
            <TextField onKeyTyped="#fillorder" fx:id="P1_2" promptText="wings" HBox.hgrow="ALWAYS">
               <HBox.margin>
                  <Insets bottom="20.0" />
               </HBox.margin>
            </TextField>
            <StackPane HBox.hgrow="ALWAYS" styleClass="quality" >
                  <Circle fx:id="oneplus" onMouseClicked="#affirmatif1" styleClass="qualityCircle"/>
                  <Label fx:id="oneplusLabel" alignment="CENTER" text="+" styleClass="qualityLabel"/>
            </StackPane>
            <StackPane HBox.hgrow="ALWAYS" styleClass="quality" >
               <Circle fx:id="oneminus" onMouseClicked="#negatif1" styleClass="qualityCircle"/>
               <Label fx:id="oneminusLabel" alignment="CENTER" text="-" styleClass="qualityLabel"/>
            </StackPane>
         </children>
      </HBox>
      <HBox alignment="CENTER" style="-fx-spacing: 10;" VBox.vgrow="ALWAYS">
         <children>
            <ComboBox fx:id="Q2" prefWidth="150.0" promptText="Ex: Some" HBox.hgrow="ALWAYS"/>
            <TextField fx:id="P2_1"  promptText="animals"  HBox.hgrow="ALWAYS" />
            <TextField  promptText="are" HBox.hgrow="ALWAYS" />
            <TextField onKeyTyped="#fillorder" fx:id="P2_2"  promptText="birds" HBox.hgrow="ALWAYS" />
            <StackPane HBox.hgrow="ALWAYS" styleClass="quality" >
               <Circle fx:id="twoplus" onMouseClicked="#affirmatif2" styleClass="qualityCircle"/>
               <Label fx:id="twoplusLabel" alignment="CENTER" text="+" styleClass="qualityLabel"/>
            </StackPane>
            <StackPane HBox.hgrow="ALWAYS" styleClass="quality" >
               <Circle fx:id="twominus" onMouseClicked="#negatif2" styleClass="qualityCircle"/>
               <Label fx:id="twominusLabel" alignment="CENTER" text="-" styleClass="qualityLabel"/>
            </StackPane>
         </children>
      </HBox>
      <Label id="label_conclusion" prefHeight="18.0" prefWidth="540.0" text="Conclusion:">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <HBox alignment="CENTER" style="-fx-spacing: 10;">
         <children>
            <ComboBox onAction="#fillorder" fx:id="Q3" prefWidth="150.0" promptText="Ex: Some" HBox.hgrow="ALWAYS" />
            <TextField onKeyTyped="#fillorder" fx:id="P3_1"  promptText="animals" HBox.hgrow="ALWAYS" />
            <TextField onAction="#fillorder"  promptText="have" HBox.hgrow="ALWAYS" />
            <TextField onKeyTyped="#fillorder" fx:id="P3_2" promptText="wings" HBox.hgrow="ALWAYS" />
            <StackPane HBox.hgrow="ALWAYS" styleClass="quality" >
               <Circle fx:id="threeplus" onMouseClicked="#affirmatif3" styleClass="qualityCircle"/>
               <Label fx:id="threeplusLabel" alignment="CENTER" text="+" styleClass="qualityLabel"/>
            </StackPane>
            <StackPane HBox.hgrow="ALWAYS" styleClass="quality" >
               <Circle fx:id="threeminus" onMouseClicked="#negatif3" styleClass="qualityCircle"/>
               <Label fx:id="threeminusLabel" alignment="CENTER" text="-" styleClass="qualityLabel"/>
            </StackPane>
         </children>
      </HBox>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
         <children>
            <Button fx:id="validate" onAction="#validate" mnemonicParsing="false" text="Validate" styleClass="validate"/>
            <Button onAction="#clear" contentDisplay="CENTER" mnemonicParsing="false" text="Clear" styleClass="clear">
               <padding>
                  <Insets left="20.0" right="20.0" />
               </padding>
               <HBox.margin>
                  <Insets left="20.0" right="20.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
   </children>
</VBox>
